{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "declarationDir": "dist/types",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "module": "CommonJS",
        "noEmit": false,
        "noImplicitAny": true,
        "outDir": "./dist",
        "removeComments": true,
        "baseUrl": "./",
        "skipLibCheck": true,
        "strict": true,
        "target": "ESNext",
        "types": [
            "react",
            "jest",
            "@testing-library/jest-dom",
            "node"
        ]
    },
    "include": [
        ".eslintrc.js",
        "**/*.js",
        "**/*.jsx",
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
