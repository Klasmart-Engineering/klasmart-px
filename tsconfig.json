{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react-jsx",
        "module": "CommonJS",
        "target": "ES6",
        "moduleResolution": "Node",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "noEmit": false,
        "noImplicitAny": true,
        "outDir": "./dist",
        "sourceRoot": "./src",
        "sourceMap": true,
        "removeComments": true,
        "skipLibCheck": true,
        "strict": true,
        "types": [
            "react",
            "jest",
            "@testing-library/jest-dom",
            "node"
        ]
    },
    "include": [
        "src/**/*.js",
        "src/**/*.jsx",
        "src/**/*.ts",
        "src/**/*.tsx",
    ],
    "exclude": [
        "dist",
        "node_modules",
        "scripts",
        "src/**/*.test.ts",
        "src/**/*.test.tsx"
    ],
    "files": [
        "scripts/generate-icons.ts",
        "src/types/global.d.ts"
    ],
    "ts-node": {
        "files": true
    }
}
