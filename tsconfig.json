{
    "compilerOptions": {
        "target": "ES2015",
        "module": "commonjs",
        "jsx": "react",
        "declaration": true,
        "declarationDir": "dist",
        "outDir": "dist",
        "rootDir": "./src",
        "removeComments": true,
        "noEmit": false,
        "strict": true,
        "noImplicitAny": true,
        "types": ["react"],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts"],
    "exclude": [
        "node_modules",
        "./dist/**/*",
        "./webpack.config.js"
    ]
}
